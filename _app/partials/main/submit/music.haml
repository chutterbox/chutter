%md-content.md-padding
  %div{layout: "column", layout-padding: true, style: "width: 100%"}
      %md-autocomplete{ng-model-options: "{ debounce: 1000 }", md-search-text: "query", md-items: "item in querySearch(query)", md-min-length: "2",  md-item-text: "selectedItem.title", md-selected-item-change: "selectedItemChange()", md-selected-item: "selectedItem",placeholder: "Type a song"}
        %md-item-template
          %span
            %img{ng-src: "{{item.thumbnail_link}}"}
          %span.item-title
            %md-icon{"md-svg-icon" => "img/icons/octicon-repo.svg"}
            %span{ng-bind: "item.title"}
        %md-not-found
          Item not found
      %div{layout: "row", ng-if: "selectedItem"}
        %md-input-container{flex: true}
          %label Title
          %input{ng-model: "newPost.title", required: "required", type: "text"}
      %div{layout: "row"}
        %span{flex: true}
        %md-button.md-raised.md-priary{ng-click: "submit()"}
          Submit       
    %div{flex: true, ng-if: "preview && selectedItem"}
      %md-list#posts
        %post.post{post: "preview", post-index: "$index", layout: "row",layout-sm: "column", flex: true, id: "post-{{post.id}}"} 
