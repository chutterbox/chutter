.context{ng-click: "open()"}
  %md-button.md-fab.md-mini.md-hue-2
    %i.fa.fa-comments.fa-fw
.content{layout: "row", layout-sm: "column", ng-click: "open()"}
  .mentionable
    %h4{ng-bind: "'Re: ' + entity.body"}
  .tagline{flex: true, ng-switch: "entity.notifications.length"} 
    %p{ng-switch-when: "1", ng-bind: "notifications[0].body"}
    %p{ng-switch-default: "true", ng-bind: "entity.notifications.length + ' new notifications'"}

