%div.md-whiteframe-z1{ng-hide: "ctrl.post.body", style: "margin: 8px;", ng-include: "'../app/partials/shared/post.html'"}
%div.md-whiteframe-z1{ng-show: "ctrl.post.body", style: "margin: 8px;", ng-include: "'../app/partials/shared/discussionPost.html'"}
%md-toolbar.secondary-content#secondary-toolbar
  .md-toolbar-tools{layout: "row", layout-align: "start center"}
    %p.color-light.comment-count{ng-bind: "ctrl.notifications.length + ' notifications'"}

%comment-list{layout: "column", flex: "true"}
  %div{ng-repeat: "notification in ctrl.notifications", ng-switch: "notification.entityable"}
    %comment.primary-content{ng-switch-when: "comment", layout: "column", parent: "", id: "c{{notification.path}}", comment: "notification", post: "post"}
