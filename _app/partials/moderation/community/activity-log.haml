%md-data-table-toolbar
  %h2.md-title
    Activity Log
%md-data-table-container
  %table{md-data-table: true}
    %thead
      %tr
        %th{name: "Moderator"}
        %th{name: "Action"}
        %th{name: "Context"}
        %th{name: "Item"}
        %th{name: "Rule Violation"}
    %tbody{ng-repeat: "entry in activityLog.activity_log_entries", ng-switch: "entry.entityable_type"}
      %td{ng-bind: "entry.user.username"} 
      %td{ng-bind: "entry.action"}
      %td{ng-bind: "entry.entityable_type"}
      %td{ng-switch-when: "Post", ng-bind: "entry.entityable.title"}
      %td{ng-switch-when: "Comment", ng-bind: "entry.entityable.body"}
      %td{ng-switch-when: "User", ng-bind: "entry.entityable.username"}
      %td{ng-bind: "::entry.rule.category"}
