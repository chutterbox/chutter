%md-bottom-sheet{layout: "column", layout-fill: "true"}
  %md-toolbar.md-warn
    .md-toolbar-tools
      %h3
        Report
      %span{flex: true}
      %md-button.md-icon-button.large-icon{ng-click: "closeSheet(false)"}
        %i.ion.ion-android-close
  %div{ng-if: "post"}
    %div{ng-include: "'/partials/shared/postEmbed.html'"}
    %form{name: "explanationForm"}
      %md-subheader
        Rule Violation
      %md-radio-group{ng-model: "activityLogEntry.rule_id"}
        %md-radio-button.md-primary{ng-repeat: "rule in communityRules", ng-value: "rule.id"}
          {{rule.category}}
      %md-input-container{flex: true}
        %label Detailed Explanation
        %textarea{ng-model: "activityLogEntry.detailed_explanation", type: "text", rows: 5}
      .footer{layout: "row"}
        %span{flex: true}
        %md-button.md-raised{ng-click: "submitEntityableForm()"}
          Submit
  %div{ng-if: "comment"}
    %div{ng-include: "'/partials/shared/comments/commentEmbed.html'"}
    %form{name: "explanationForm"}
      %md-subheader
        Rule Violation
      %md-radio-group{ng-model: "activityLogEntry.rule_id"}
        %md-radio-button.md-primary{ng-repeat: "rule in communityRules", ng-value: "rule.id"}
          {{rule.category}}
      %md-input-container{flex: true}
        %label Detailed Explanation
        %textarea{ng-model: "activityLogEntry.detailed_explanation", type: "text", rows: 5}
      .footer{layout: "row"}
        %span{flex: true}
        %md-button.md-raised{ng-click: "submitEntityableForm()"}
          Submit
    